@model SV21T1020725.DomainModels.Category
@{
}
<div class="box box-info">
    <div class="box-body">
        <form action="~/Category/Save" method="post">
            <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID"/>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Tên loại hàng</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Nhập tên hàng" name="@nameof(Model.CategoryName)" value="@Model.CategoryName">
                    @Html.ValidationMessage(nameof(Model.CategoryName))
                </div>

            </div>

            <div class="form-group row">
                <label for="gia" class="col-sm-2 col-form-label">Mô tả</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Nhập mô tả" name="@nameof(Model.Description)" value="@Model.Description">
                    @Html.ValidationMessage(nameof(Model.Description))
                </div>
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">
                    Quay lại
                </a>
            </div>
            @Html.ValidationMessage("Error")
        </form>
    </div>
</div>