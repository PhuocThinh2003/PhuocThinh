@model SV21T1020725.DomainModels.Shipper
@{
    ViewBag.Title = "Xóa Người giao hàng";
}
<div class="box box-danger">
    <div class="box-body">
        <form action="/Shipper/Delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label>Tên giao hàng</label>
                <p class="form-control-static">@Model.ShipperName</p>
            </div>
            <div class="form-group">
                <label>Điện thoai</label>
                <p class="form-control-static">@Model.Phone</p>
            </div>
            <div class="form-group text-right">
                @if (SV21T1020725.BusinessLayers.CommonDataService.InUsedShipper(Model.ShipperID) == false)
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                        Xác nhận xóa
                    </button>
                }
                <a href="~/Shipper" class="btn btn-default">Quay lại</a>
            </div>

        </form>
    </div>
</div>
